<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <% if (!contact) { %>
        <div class="alert alert-danger" role="alert">
          404: Page Not Found<a href="/contact" class="alert-link"> &laquo; Kembali</a>.
        </div>
      <% } else {%>
      <h2>Detail Contact</h2>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %> </h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHp %> </h6>
          <p class="card-text"><%= contact.email %> </p>
          <a href="/contact" class="card-link">Kembali</a>
        </div>
      </div>
      <% } %> 
    </div>
  </div>
</div>